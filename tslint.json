{
  "extends": ["tslint:recommended"],
  "rulesDirectory": ["node_modules/codelyzer"],
  "rules": {
    "arrow-parens": false,
    "import-blacklist": [true, "rxjs"],
    "interface-name": false,
    "max-classes-per-file": false,
    "max-line-length": [true, 100],
    "member-access": [true, "no-public"],
    "member-ordering": false,
    "no-console": [true, "time", "timeEnd", "trace"],
    "no-duplicate-variable": true,
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-catch",
      "check-else",
      "check-finally",
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [true, "avoid-espace", "single"],
    "radix": true,
    "semicolon": [true, "never"],
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-leading-underscore",
        "allow-pascal-case"
      ]
    },
    "trailing-comma": false,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-rest-spread",
      "check-separator",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ],
    // Codelyzer
    "banana-in-box": true,
    "component-class-suffix": true,
    "component-selector": [true, "element", ["app", "nca"], "kebab-case"],
    "contextual-life-cycle": true,
    "decorator-not-allowed": true,
    "directive-class-suffix": true,
    "directive-selector": [true, "attribute", "nca", "camelCase"],
    "import-destructuring-spacing": true,
    "no-attribute-parameter-decorator": true,
    "no-forward-ref": true,
    "no-input-rename": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "pipe-impure": true,
    "pipe-naming": [true, "camelCase", "nca"],
    "templates-no-negated-async": true,
    "use-host-property-decorator": true,
    "use-input-property-decorator": true,
    "use-life-cycle-interface": true,
    "use-output-property-decorator": true,
    "use-pipe-decorator": true,
    "use-pipe-transform-interface": true,
    "use-view-encapsulation": true
  }
}
